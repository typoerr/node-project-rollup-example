{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2015",
    "lib": [
      "ES2019"
    ],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "projects/shared/*"
      ]
    },
    "declaration": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "pretty": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "projects/**/*.ts",
    "projects/**/*.tsx"
  ],
  "exclude": [
    "**/node_modules/**"
  ]
}